{
  "name": "writers-cli",
  "version": "1.0.0",
  "description": "A CLI tool for writing novels and short stories with markdown support and offline AI voice transcription",
  "main": "gui/main.js",
  "bin": {
    "writers": "./bin/writers.js"
  },
  "scripts": {
    "start": "node bin/writers.js",
    "gui": "electron gui/main.js",
    "gui-classic": "electron gui/main.js",
    "gui-dev": "nodemon --exec 'electron gui/main.js'",
    "test": "jest",
    "test:voice": "node test-voice-integration.js",
    "test:voice-editor": "node test-voice-editor-integration.js",
    "demo:voice": "node demo-voice.js",
    "demo:voice-editor": "node voice-editor-demo.js",
    "demo:model-management": "node demo-model-management.js",
    "test:model-management": "node test-model-management.js",
    "test:original": "node test-original-functionality.js",
    "test:gui-project": "node test-gui-project-creation.js",
    "doctor:voice": "node voice-integration-doctor.js",
    "example:voice": "node example-voice-workflow.js",
    "voice:check": "node bin/writers.js voice check",
    "dev": "nodemon bin/writers.js",
    "build": "pkg --config pkg.config.json bin/writers.js",
    "pack:mac": "electron-packager . \"My Novel\" --platform=darwin --overwrite --out=dist --ignore='^(bin|rust-cli|tests|demo-project|.*\\\\.md|pkg\\\\.config\\\\.json)$' --icon gui-logo.png",
    "pack:mac:arm64": "electron-packager . \"My Novel\" --platform=darwin --arch=arm64 --overwrite --out=dist --ignore='^(bin|rust-cli|tests|demo-project|.*\\\\.md|pkg\\\\.config\\\\.json)$' --icon gui-logo.png",
    "pack:mac:x64": "electron-packager . \"My Novel\" --platform=darwin --arch=x64 --overwrite --out=dist --ignore='^(bin|rust-cli|tests|demo-project|.*\\\\.md|pkg\\\\.config\\\\.json)$'",
    "gui-debug": "electron gui-fixed-launcher.js"
  },
  "keywords": [
    "writing",
    "novel",
    "short-story",
    "cli",
    "markdown",
    "author",
    "book",
    "fiction",
    "voice-transcription",
    "speech-to-text",
    "whisper",
    "ai",
    "offline"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "archiver": "^5.3.1",
    "blessed": "^0.1.81",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "electron": "^37.2.4",
    "electron-packager": "^17.1.2",
    "express": "^4.21.2",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.6",
    "marked": "^9.1.2",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.2",
    "node-record-lpcm16": "^1.0.1",
    "ora": "^5.4.1",
    "pkg": "^5.8.1",
    "puppeteer": "^21.5.0",
    "speaker": "^0.5.5",
    "wav": "^1.0.2",
    "word-count": "^0.2.2",
    "ws": "^8.14.2",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/writers-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/writers-cli/issues"
  },
  "homepage": "https://github.com/yourusername/writers-cli#readme"
}
