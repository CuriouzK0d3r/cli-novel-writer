{
  "name": "writers-cli",
  "version": "1.0.0",
  "description": "A CLI tool for writing novels and short stories with markdown support",
  "main": "gui/main.js",
  "bin": {
    "writers": "./bin/writers.js"
  },
  "scripts": {
    "start": "node bin/writers.js",
    "gui": "node gui-enhanced-launcher.js",
    "gui-classic": "electron gui/main.js",
    "gui-dev": "nodemon --exec 'electron gui/main.js'",
    "test": "jest",
    "dev": "nodemon bin/writers.js",
    "build": "pkg --config pkg.config.json bin/writers.js",
    "pack:mac": "electron-packager . \"My Novel\" --platform=darwin --overwrite --out=dist --ignore='^(bin|rust-cli|tests|demo-project|.*\\\\.md|pkg\\\\.config\\\\.json)$'",
    "pack:mac:arm64": "electron-packager . \"My Novel\" --platform=darwin --arch=arm64 --overwrite --out=dist --ignore='^(bin|rust-cli|tests|demo-project|.*\\\\.md|pkg\\\\.config\\\\.json)$'",
    "pack:mac:x64": "electron-packager . \"My Novel\" --platform=darwin --arch=x64 --overwrite --out=dist --ignore='^(bin|rust-cli|tests|demo-project|.*\\\\.md|pkg\\\\.config\\\\.json)$'"
  },
  "keywords": [
    "writing",
    "novel",
    "short-story",
    "cli",
    "markdown",
    "author",
    "book",
    "fiction"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.1",
    "archiver-utils": "^5.0.2",
    "blessed": "^0.1.81",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "crypto": "^1.0.1",
    "electron": "^37.2.4",
    "electron-packager": "^17.1.2",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.6",
    "marked": "^9.1.2",
    "moment": "^2.29.4",
    "ora": "^5.4.1",
    "pkg": "^5.8.1",
    "puppeteer": "^21.5.0",
    "word-count": "^0.2.2",
    "ws": "^8.14.2",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/writers-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/writers-cli/issues"
  },
  "homepage": "https://github.com/yourusername/writers-cli#readme"
}
